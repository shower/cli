{
  "name": "@shower/cli",
  "description": "Command line interface for Shower",
  "version": "0.2.8",
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Nikolay Govorov",
    "email": "nikolay_govorov@bk.ru"
  },
  "homepage": "https://github.com/shower/cli",
  "repository": {
    "type": "git",
    "url": "git://github.com/shower/cli.git"
  },
  "bugs": {
    "url": "https://github.com/shower/cli/issues"
  },
  "license": "MIT",
  "keywords": [
    "shower",
    "presentation",
    "cli"
  ],
  "engines": {
    "node": ">=8"
  },
  "bin": {
