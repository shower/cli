    "gulp-replace": "^1.0.0",
    "gulp-template": "^5.0.0",
    "gulp-zip": "^4.2.0",
    "inquirer": "^6.3.1",
    "listr": "^0.14.3",
    "merge-stream": "^1.0.1",
