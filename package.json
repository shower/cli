    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.6",
    "pdf-parse": "^1.1.1",
    "pre-commit": "^1.2.2",
    "yaspeller-ci": "^1.0.0"
  },
  "dependencies": {
    "browser-sync": "^2.26.5",
    "chalk": "^2.4.2",
    "chrome-launcher": "^0.12.0",
    "del": "^3.0.0",
    "execa": "^1.0.0",
    "gh-pages": "^2.0.1",
