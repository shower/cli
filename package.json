    "semver": "^5.7.0",
    "tmp": "0.0.33",
    "update-notifier": "^2.5.0",
    "vinyl-fs": "^3.0.3",
    "yargs": "^13.2.2"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/**/__tests__/*.test.js"
    ]
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "spellcheck": "yaspeller-ci *.md",
    "lint": "eslint-ci **/*.js --fix",
    "test": "jest && npm run lint && npm run spellcheck"
  }
}
