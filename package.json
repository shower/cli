{
  "name": "shower-cli",
  "version": "0.1.1",
  "description": "Command line interface for Shower",
  "keywords": [
    "shower",
    "cli"
  ],
  "author": "Nikolay Govorov <nikolay_govorov@bk.ru>",
  "license": "MIT",
  "repository": "shower/cli",
  "bin": {
    "shower": "cli.js"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "spellcheck": "yaspeller-ci *.md",
    "lint": "eslint-ci *.js test/{fixtures/**/,}*.js",
    "test": "jest && npm run lint && npm run spellcheck"
  },
  "engines": {
    "node": ">=6.11.5"
  },
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/test/fixtures"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-ci": "^0.1.1",
    "eslint-config-logux": "^23.1.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.21.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^3.1.0",
    "jest": "^22.4.4",
    "lint-staged": "^7.2.2",
    "pre-commit": "^1.2.2",
    "yaspeller-ci": "^1.0.0"
  },
  "dependencies": {
    "browser-sync": "^2.24.6",
    "chalk": "^2.4.1",
    "download": "^7.1.0",
    "puppeteer": "^1.7.0",
    "semver": "^5.5.1",
    "signale": "^1.2.1",
    "yargs": "^11.1.0"
  }
}
